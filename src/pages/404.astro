---
import BaseLayout from "../layouts/BaseLayout.astro"
import Header from "../components/layout/Header.astro"
import Footer from "../components/layout/Footer.astro"
---

<BaseLayout title="Page Not Found - LevitateOS" description="The page you're looking for doesn't exist.">
	<div class="flex min-h-screen flex-col">
		<Header />
		<main class="flex-1 flex items-center justify-center py-24">
			<div class="text-center">
				<h1 class="text-8xl font-bold text-primary mb-4">404</h1>
				<p class="text-xl text-muted-foreground mb-8">Page not found</p>
				<p class="text-muted-foreground mb-8 max-w-md mx-auto">
					The page you're looking for doesn't exist or has been moved.
				</p>
				<a
					href="/"
					class="inline-flex items-center justify-center rounded-md bg-primary px-6 py-3 text-sm font-medium text-primary-foreground hover:bg-primary/90 transition-colors"
				>
					Back to Home
				</a>
			</div>
		</main>
		<Footer />
	</div>
</BaseLayout>
