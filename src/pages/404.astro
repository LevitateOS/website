---
import BaseLayout from "../layouts/BaseLayout.astro"
import Header from "../components/layout/Header.astro"
import Footer from "../components/layout/Footer.astro"
---

<BaseLayout title="Page Not Found - LevitateOS" description="The page you're looking for doesn't exist.">
	<div class="flex min-h-screen flex-col">
		<Header />
		<main class="flex-1 flex items-center justify-center py-8">
			<div class="text-center">
				<h1 class="text-4xl font-medium text-primary mb-2">404</h1>
				<p class="text-sm text-muted-foreground mb-4">Page not found</p>
				<p class="text-xs text-muted-foreground mb-4 max-w-md mx-auto">
					The page you're looking for doesn't exist or has been moved.
				</p>
				<a
					href="/"
					class="inline-flex items-center justify-center bg-primary h-8 px-2.5 text-xs font-medium text-primary-foreground hover:bg-primary/90 transition-colors select-none"
				>
					Back to Home
				</a>
			</div>
		</main>
		<Footer />
	</div>
</BaseLayout>
