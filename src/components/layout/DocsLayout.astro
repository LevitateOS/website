---
import Header from "./Header.astro"
import Footer from "./Footer.astro"
import DocsSidebar from "./DocsSidebar.astro"
import BaseLayout from "../../layouts/BaseLayout.astro"

interface Props {
	title: string
	currentSlug: string
	description?: string
}

const { title, currentSlug, description } = Astro.props
const pageDescription = description || `${title} - LevitateOS documentation. Learn how to install, configure, and use LevitateOS.`
---

<BaseLayout title={`${title} - LevitateOS Docs`} description={pageDescription}>
	<Header />
	<div class="container py-8">
		<div class="md:flex md:gap-6">
			<DocsSidebar currentSlug={currentSlug} />
			<article class="flex-1 min-w-0">
				<slot />
			</article>
		</div>
	</div>
	<Footer />
</BaseLayout>
