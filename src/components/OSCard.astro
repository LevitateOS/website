---
import LevitateTextLogo from "./brand/LevitateTextLogo.astro"
import RalphTextLogo from "./brand/RalphTextLogo.astro"
import AcornTextLogo from "./brand/AcornTextLogo.astro"

interface Props {
	variant: "levitate" | "ralph" | "acorn"
	name: string
	stack: string
	description: string
	features: string[]
	logo: string
	builderDescription?: string
}

const { variant, name, stack, description, features, logo, builderDescription } = Astro.props
---

<div class="ui-panel ui-lift p-5 h-full flex flex-col overflow-hidden">
	<div class="ui-divider -mx-5 mb-4" />
	<div class="flex items-center gap-3 mb-3">
		<div class="size-10 shrink-0 grid place-items-center">
			<img
				src={logo}
				alt={name}
				loading="lazy"
				class="w-full h-full object-contain"
			/>
		</div>
		<div>
			<h3 class="text-base font-medium">
				{variant === "levitate" ? (
					<LevitateTextLogo />
				) : variant === "ralph" ? (
					<RalphTextLogo />
				) : (
					<AcornTextLogo />
				)}
			</h3>
			<p class="text-sm text-muted-foreground">{stack}</p>
		</div>
	</div>
	<p class="text-sm text-muted-foreground mb-4 flex-grow">
		{description}
	</p>
	<ul class="space-y-1.5 text-sm">
		{features.map((feature) => (
			<li class="flex items-center gap-2">
				<svg class="size-4 text-primary shrink-0" viewBox="0 0 256 256" fill="currentColor">
					<path d="M229.66 77.66l-128 128a8 8 0 0 1-11.32 0l-56-56a8 8 0 0 1 11.32-11.32L96 188.69l122.34-122.35a8 8 0 0 1 11.32 11.32Z" />
				</svg>
				{feature}
			</li>
		))}
	</ul>
	{builderDescription && (
		<div class="mt-4 pt-4 border-t border-border">
			<p class="text-xs text-muted-foreground">
				{builderDescription}
			</p>
		</div>
	)}
</div>
