---
interface Props {
	name: string
	stack: string
	description: string
	features: string[]
	logoLight: string
	logoDark: string
	builderDescription?: string
}

const { name, stack, description, features, logoLight, logoDark, builderDescription } = Astro.props
---

<div class="p-5 bg-background ring-1 ring-border h-full flex flex-col">
	<div class="flex items-center gap-3 mb-3">
		<picture>
			<source srcset={logoDark} media="(prefers-color-scheme: dark)" />
			<img src={logoLight} alt={name} width="40" height="40" loading="lazy" class="size-10" />
		</picture>
		<div>
			<h3 class="text-base font-medium">{name}</h3>
			<p class="text-sm text-muted-foreground">{stack}</p>
		</div>
	</div>
	<p class="text-sm text-muted-foreground mb-4 flex-grow">
		{description}
	</p>
	<ul class="space-y-1.5 text-sm">
		{features.map((feature) => (
			<li class="flex items-center gap-2">
				<svg class="size-4 text-primary shrink-0" viewBox="0 0 256 256" fill="currentColor">
					<path d="M229.66 77.66l-128 128a8 8 0 0 1-11.32 0l-56-56a8 8 0 0 1 11.32-11.32L96 188.69l122.34-122.35a8 8 0 0 1 11.32 11.32Z" />
				</svg>
				{feature}
			</li>
		))}
	</ul>
	{builderDescription && (
		<div class="mt-4 pt-4 border-t border-border">
			<p class="text-xs text-muted-foreground">
				{builderDescription}
			</p>
		</div>
	)}
</div>
