---
export interface Props {
	title: string
	logo: string
	stack: string
	description: string
	pros: string[]
	cons: string[]
	status: "available" | "coming-soon" | "planned"
	downloadUrl?: string
	minRam: string
	recRam: string
	minDisk: string
	recDisk: string
}

const {
	title,
	logo,
	stack,
	description,
	pros,
	cons,
	status,
	downloadUrl,
	minRam,
	recRam,
	minDisk,
	recDisk,
} = Astro.props
---

<div class="bg-card border rounded-lg overflow-hidden">
	<div class="flex flex-col sm:flex-row">
		<!-- OS Info -->
		<div class="p-4 sm:p-6 flex flex-col flex-1">
			<div class="flex items-center gap-3 mb-2">
				<img src={logo} alt={title} width="40" height="40" loading="lazy" class="h-10 w-10" />
				<h3 class="text-xl font-semibold">{title}</h3>
			</div>

			<p class="text-xs font-mono text-muted-foreground mb-2">{stack}</p>
			<p class="text-sm text-muted-foreground mb-4">{description}</p>

			<div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
				<!-- Pros -->
				<ul class="space-y-1 text-xs">
					{pros.map((pro) => (
						<li class="flex items-start gap-1.5">
							<span class="text-green-500 flex-shrink-0">+</span>
							<span>{pro}</span>
						</li>
					))}
				</ul>

				<!-- Cons -->
				<ul class="space-y-1 text-xs">
					{cons.map((con) => (
						<li class="flex items-start gap-1.5">
							<span class="text-red-400 flex-shrink-0">âˆ’</span>
							<span>{con}</span>
						</li>
					))}
				</ul>
			</div>
		</div>

		<!-- Download -->
		<div class="bg-black/20 p-4 sm:p-6 flex flex-col sm:w-56 sm:shrink-0">
			<h4 class="font-semibold mb-3 text-sm">Download</h4>
			<div class="text-xs text-muted-foreground mb-4">
				<table class="w-full sm:w-auto">
					<thead>
						<tr class="text-muted-foreground/70">
							<td></td>
							<td class="text-right pb-1 pl-4">Min</td>
							<td class="text-right pb-1 pl-4">Rec</td>
						</tr>
					</thead>
					<tbody>
						<tr>
							<td class="font-medium">RAM</td>
							<td class="text-right pl-4">{minRam}</td>
							<td class="text-right pl-4">{recRam}</td>
						</tr>
						<tr>
							<td class="font-medium">Disk</td>
							<td class="text-right pl-4">{minDisk}</td>
							<td class="text-right pl-4">{recDisk}</td>
						</tr>
					</tbody>
				</table>
			</div>

			{status === "available" ? (
				<a
					href={downloadUrl}
					class="inline-flex items-center justify-center gap-2 bg-primary text-primary-foreground px-4 py-2.5 rounded hover:bg-primary/90 transition-colors text-sm mt-auto"
				>
					<svg class="h-4 w-4" viewBox="0 0 256 256" fill="currentColor">
						<path d="M224 152v56a16 16 0 0 1-16 16H48a16 16 0 0 1-16-16v-56a8 8 0 0 1 16 0v56h160v-56a8 8 0 0 1 16 0Zm-101.66 5.66a8 8 0 0 0 11.32 0l40-40a8 8 0 0 0-11.32-11.32L136 132.69V40a8 8 0 0 0-16 0v92.69l-26.34-26.35a8 8 0 0 0-11.32 11.32Z"/>
					</svg>
					Download ISO
				</a>
			) : status === "coming-soon" ? (
				<span class="flex flex-col items-center justify-center bg-muted text-muted-foreground px-4 py-2.5 rounded text-sm mt-auto text-center">
					<span>Coming Soon</span>
					<span class="text-xs">(Feb/Mar 2026)</span>
				</span>
			) : (
				<span class="flex flex-col items-center justify-center bg-muted text-muted-foreground px-4 py-2.5 rounded text-sm mt-auto text-center">
					<span>Coming Soon</span>
					<span class="text-xs">(Mar/May 2026)</span>
				</span>
			)}
		</div>
	</div>
</div>
