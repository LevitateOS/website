---
interface Props {
	title: string
	description: string
}

const { title, description } = Astro.props
---

<div class="ui-panel ui-lift flex h-full flex-col gap-3 overflow-hidden p-5 text-sm">
	<div class="flex items-center gap-2">
		<div class="text-accent [&_svg]:size-5 text-[color:var(--accent)]">
			<slot name="icon" />
		</div>
		<h3 class="text-base font-semibold tracking-tight">{title}</h3>
	</div>
	<p class="text-muted-foreground">{description}</p>
	{Astro.slots.has("default") && <div class="pt-1"><slot /></div>}
</div>
