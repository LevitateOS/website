---
interface Props {
	title: string
	description: string
}

const { title, description } = Astro.props
---

<div
	class="bg-card text-card-foreground flex flex-col gap-4 overflow-hidden py-4 ring-1 ring-foreground/10 h-full"
>
	<div class="px-4 grid gap-1 auto-rows-min items-start">
		<div class="flex items-center gap-3">
			<div class="text-primary">
				<slot name="icon" />
			</div>
			<div class="text-lg font-medium">{title}</div>
		</div>
		<div class="text-muted-foreground text-sm">{description}</div>
	</div>
	{
		Astro.slots.has("default") && (
			<div class="px-4">
				<slot />
			</div>
		)
	}
</div>
