<style>
	.r4d-ralphd-content {
		padding: 0.15rem 0;
		display: flex;
		flex-direction: column;
		height: 100%;
	}

	.r4d-ralphd__head {
		display: flex;
		align-items: flex-start;
		gap: 0.75rem;
	}

	.r4d-ralphd__brand {
		display: inline-flex;
		align-items: center;
		gap: 0.65rem;
		min-width: 0;
	}

	.r4d-ralphd__icon-wrap {
		width: 2rem;
		height: 2rem;
		flex: 0 0 auto;
		display: grid;
		place-items: center;
		border: 1px solid var(--border);
		background: color-mix(in srgb, var(--card) 86%, transparent);
	}

	.r4d-ralphd__icon {
		width: 1.35rem;
		height: 1.35rem;
		color: color-mix(in srgb, var(--foreground) 90%, white 10%);
	}

	.r4d-ralphd__meta {
		line-height: 1.35;
		max-width: 54ch;
	}

	.r4d-ralphd__notice {
		max-width: 54ch;
		margin-top: auto;
		padding: 0.55rem 0.65rem;
		border-left: 6px solid var(--accent);
		background: color-mix(in srgb, var(--muted) 40%, transparent);
	}

	.r4d-ralphd__notice-copy {
		margin: 0;
		line-height: 1.35;
		color: color-mix(in srgb, var(--foreground) 84%, transparent);
	}
</style>
