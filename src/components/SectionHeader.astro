---
interface Props {
	label?: string
	title: string
	highlight?: string
	centered?: boolean
	class?: string
}

const { label, title, highlight, centered = false, class: className = "" } = Astro.props
---

<div class:list={[{ "text-center": centered }, className]}>
	{label && (
		<p class="text-sm font-medium text-primary uppercase tracking-widest mb-2">
			{label}
		</p>
	)}
	<h2 class="text-2xl sm:text-3xl font-medium mb-3">
		{title}
		{highlight && (
			<>
				<br />
				<span class="text-primary">{highlight}</span>
			</>
		)}
	</h2>
</div>
