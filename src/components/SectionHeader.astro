---
interface Props {
	label?: string
	title: string
	highlight?: string
	centered?: boolean
	accent?: "mustard" | "rust" | "olive" | "teal" | "cyan" | "red"
	class?: string
}

const { label, title, highlight, centered = false, accent = "teal", class: className = "" } = Astro.props

const accentMap: Record<NonNullable<Props["accent"]>, string> = {
	mustard: "var(--spectrum-1)",
	rust: "var(--spectrum-2)",
	olive: "var(--spectrum-3)",
	teal: "var(--spectrum-4)",
	cyan: "var(--spectrum-5)",
	red: "var(--spectrum-6)",
}
---

<div class:list={[{ "text-center": centered }, className]} style={`--section-accent: ${accentMap[accent]};`}>
	{label && <p class="ui-label mb-2">{label}</p>}
	<h2 class="text-2xl font-semibold tracking-tight sm:text-3xl">{title}</h2>
	{highlight && <p class="mt-2 text-base text-muted-foreground">{highlight}</p>}
	<div class:list={["ui-divider-strong mt-3", centered ? "mx-auto w-48" : "w-56"]} />
	<div class:list={["h-2 w-2 mt-1", centered ? "mx-auto" : "ml-0"]} style="background: var(--section-accent);" />
</div>
