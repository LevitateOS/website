---
interface Message {
	role: "user" | "assistant"
	text: string
	highlight?: boolean
}

interface Props {
	messages: Message[]
}

const { messages } = Astro.props
---

<div
	class="ui-panel text-card-foreground flex flex-col gap-2 overflow-hidden py-4 text-xs/relaxed"
>
	<div class="px-4 space-y-1">
		{
			messages.map((msg) => (
				<div>
					<span class="text-muted-foreground">{msg.role === "user" ? "You:" : "Assistant:"}</span>
					<span class={msg.highlight ? "ml-1 text-[color:var(--accent)]" : "ml-1"}>{msg.text}</span>
				</div>
			))
		}
	</div>
</div>
