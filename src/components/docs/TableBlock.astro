---
import type { TableBlock } from "@levitate/docs-content"
import InlineContent from "./InlineContent.astro"

interface Props {
	table: TableBlock
}

const { table } = Astro.props
---

<div class="relative mb-5 w-full overflow-x-auto ui-panel">
	<table class="w-full caption-bottom text-sm">
		<thead>
			<tr class="border-b-2 border-border-strong bg-secondary/60">
				{table.headers.map((header) => (
					<th class="h-10 px-3 text-left align-middle font-semibold whitespace-nowrap">
						<InlineContent content={header} />
					</th>
				))}
			</tr>
		</thead>
		<tbody>
			{table.rows.map((row) => (
				<tr class="border-b border-border last:border-b-0 hover:bg-muted/40 transition-colors">
					{row.map((cell, j) => (
						<td class:list={["px-3 py-2 align-middle whitespace-nowrap", j === table.monospaceCol ? "font-mono text-xs" : ""]}>
							<InlineContent content={cell} />
						</td>
					))}
				</tr>
			))}
		</tbody>
	</table>
</div>
