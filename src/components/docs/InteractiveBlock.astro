---
import type { InteractiveBlock } from "@levitate/docs-content"
import InlineContent from "./InlineContent.astro"

interface Props {
	block: InteractiveBlock
}

const { block } = Astro.props
---

<div class="mb-5 space-y-3 text-sm leading-relaxed">
	{block.intro && (
		<p class="text-muted-foreground">
			<InlineContent content={block.intro} />
		</p>
	)}
	{block.steps.map((step, index) => (
		<div class="ui-panel p-3 grid gap-3 md:grid-cols-[auto_1fr] md:items-start">
			<div class="ui-label text-[color:var(--accent)]">STEP {String(index + 1).padStart(2, "0")}</div>
			<div class="grid gap-2">
				<code class="code-plate px-3 py-2 font-mono text-xs overflow-x-auto">{step.command}</code>
				<span class="text-muted-foreground">
					<InlineContent content={step.description} />
				</span>
			</div>
		</div>
	))}
</div>
