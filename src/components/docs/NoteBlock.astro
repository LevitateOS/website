---
import type { NoteBlock } from "@levitate/docs-content"
import InlineContent from "./InlineContent.astro"

interface Props {
	block: NoteBlock
}

const { block } = Astro.props

const variantClasses: Record<NoteBlock["variant"], string> = {
	info: "border-[color:var(--accent)]",
	warning: "border-[color:var(--spectrum-1)]",
	danger: "border-[color:var(--spectrum-6)]",
}

const variantLabel: Record<NoteBlock["variant"], string> = {
	info: "NOTE",
	warning: "WARNING",
	danger: "DANGER",
}
---

<div class:list={["ui-panel ui-panel-muted mb-4 border-l-[8px] p-4", variantClasses[block.variant]]}>
	<p class="ui-label mb-2">{variantLabel[block.variant]}</p>
	<div class="text-sm leading-relaxed text-muted-foreground">
		<InlineContent content={block.content} />
	</div>
</div>
